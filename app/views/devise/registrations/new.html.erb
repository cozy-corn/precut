   <!-- 新規登録画面 -->
<div class="my-container">
  <div class="flex flex-col items-center">
    <div class="bg-white p-8 rounded-lg shadow-lg">
      <h1 class="text-2xl"><%= t('.sign_up') %></h1>
      <div class="flex flex-col space-y-4">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <!-- メールアドレス -->
          <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-1">
              <%= t('.email') %> <span class="text-red-500">*</span>
            </label>
            <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: t('.email') %>
          </div>
          <!-- 氏名 -->
          <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-1">
              <%= t('.full_name') %> <span class="text-red-500">*</span>
            </label>
            <%= f.text_field :full_name, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: t('.full_name') %>
          </div>
          <!-- 性別 -->
          <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-1"><%=t('.gender') %></label>
            <%= f.select :gender, [['男性', '男性'], ['女性', '女性'], ['その他', 'その他']], { include_blank: "選択してください" }, { class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500"} %>
          </div>
          <!-- 年齢 -->
          <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-1">年齢</label>
            <%= f.select :age_group, [['10歳未満', '0'], ['10代', '10'], ['20代', '20'], ['30代', '30'], ['40代', '40'], ['50代', '50'], ['60代以上', '60']], { include_blank: "選択してください" }, { class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500"} %>
          </div>
          <!-- パスワード -->
          <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-1">
              <%= t('.password') %><span class="text-red-500">*</span>
            </label>
            <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: t('.password') %>
          </div>
          <!-- パスワード確認 -->
          <div class="mb-6">
            <label class="block text-gray-700 font-medium mb-1">
              <%= t('.password_confirmation') %><span class="text-red-500">*</span>
            </label>
            <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: t('.password_confirmation') %>
          </div>
          <!-- 新規登録ボタン -->
          <%= f.submit t('.sign_up'), class: "w-full bg-blue-500 text-white font-bold py-2 px-4 rounded-md shadow hover:bg-blue-600 transition-colors duration-200" %>
        <% end %>
        <div class="mt-4 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

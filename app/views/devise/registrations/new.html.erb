   <!-- 新規登録画面 -->
<script src="https://cdn.tailwindcss.com"></script>
<div class="max-w-md mx-auto bg-gray-100">
  <div class="flex flex-col items-center">
    <div class="bg-white p-8 rounded-lg shadow-lg w-96 max-w-sm">
      <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">アカウント作成</h1>
      <div class="flex flex-col space-y-4">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="relative">
            <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "Eメール" %>
          </div>

          <div class="relative">
            <%= f.text_field :full_name, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "お名前" %>
          </div>

          <div class="relative">
            <%= f.text_field :gender, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "性別" %>
          </div>

          <div class="relative">
            <%= f.password_field :age_group, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "年代" %>
          </div>

          <div class="relative">
            <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "パスワード" %>
          </div>

          <div class="relative">
            <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "パスワード確認" %>
          </div>

          <%= f.submit "アカウント作成", class: "w-full bg-blue-500 text-white font-bold py-2 px-4 rounded-md shadow hover:bg-blue-700 transition-colors duration-200" %>
        <% end %>

        <% if notice %>
          <p class="text-green-500 text-sm"><%= notice %></p>
        <% elsif alert %>
          <p class="text-red-500 text-sm"><%= alert %></p>
        <% end %>

        <div class="mt-4 text-center">
          <p class="text-sm text-gray-600">
            既にアカウントをお持ちですか？
            <%= link_to "ログイン", new_user_session_path, class: "text-blue-500 hover:underline" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
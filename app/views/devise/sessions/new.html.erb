   <!-- ログイン画面 -->
<div class="my-container">
  <!-- 全体を中央寄せにするためのコンテナ -->
  <div class="flex flex-col items-center">
    <!-- ログインフォームのカードの様なフレームコンテナ -->
    <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg">
      <h1 class="text-2xl"><%= t('.sign_in') %></h1>
      <!-- フォーム全体を囲むコンテナ(縦方向の余白（16px相当）を自動で追加) -->
      <div class="flex flex-col space-y-4">
        <!-- フォーム -->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <!--メールアドレス -->
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", autocomplete: "email" %>
          </div>
          <!--パスワード -->
          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", autocomplete: "current-password" %>
          </div>
          <!--ログイン保持 -->
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center gap-2 mt-3 mb-4 field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <!--ログインボタン -->
          <%= f.submit t('.sign_in'), class: "w-full bg-blue-500 text-white font-bold py-2 px-4 rounded-md shadow hover:bg-blue-600 transition-colors duration-200" %>
        <% end %>
      <div class="text-center"> 
        <%= render "devise/shared/links" %>
      </div> 
      </div>
    </div>
  </div>
</div>
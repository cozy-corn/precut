   <!-- ログイン画面 -->
<div class="max-w-md mx-auto bg-gray-100">
  <!-- 全体を中央寄せにするためのコンテナ -->
  <div class="flex flex-col items-center">
    <!-- ログインフォームのカードの様なフレームコンテナ -->
    <div class="bg-white p-8 rounded-lg shadow-lg w-96 max-w-sm">
      <h1 class="text-2xl font-bold mb-6 text-center text-gray-800"><%= t('.sign_in') %></h1>
      <!-- フォーム全体を囲むコンテナ(縦方向の余白（16px相当）を自動で追加) -->
      <div class="flex flex-col space-y-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="relative">
            <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: t('.email') %>
          </div>

          <div class="relative">
            <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: t('.password') %>
          </div>
          <!-- ログイン保持 -->
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center gap-2 mt-3 mb-4">
              <%= f.check_box :remember_me, id: "remember_me_check", class: "
                appearance-none w-5 h-5 border border-gray-400 rounded-md bg-white 
                checked:bg-blue-500 checked:border-blue-500 focus:outline-none focus:ring-2 
                focus:ring-blue-300 transition-all duration-150 relative cursor-pointer
              " %>
              <label for="remember_me_check" class="flex items-center text-sm font-medium text-gray-700 cursor-pointer">
              <%= f.label :remember_me, class: "label-text" %>
              </label>
            </div>
          <% end %>
          <!--ログインボタン -->
          <%= f.submit t('.sign_in'), class: "w-full bg-blue-500 text-white font-bold py-2 px-4 rounded-md shadow hover:bg-blue-700 transition-colors duration-200" %>
        <% end %>
      <div class="text-center"> 
        <%= render "devise/shared/links" %>
      </div> 
      </div>
    </div>
  </div>
</div>
   <!-- 新規登録画面 -->
<div class="my-container">
  <div class="flex flex-col items-center">
    <div class="modal-card">
      <h1 class="text-2xl font-bold mb-6 text-center text-gray-800"><%= t('.sign_up') %></h1>
      <div class="flex flex-col space-y-4">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "salons/shared/error_messages", resource: resource %>
          <!-- メールアドレス -->
          <div class="mb-4">
            <label class="form-label">
              <%= t('.email') %> <span class="text-red-500">*</span>
            </label>
            <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: t('.email') %>
          </div>
          <!-- サロン名 -->
          <div class="mb-4">
            <label class="form-label">
              <%= t('.salon_name') %> <span class="text-red-500">*</span>
            </label>
            <%= f.text_field :salon_name, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: t('.salon_name') %>
          </div>
          <!-- パスワード -->
          <div class="mb-4">
            <label class="form-label">
              <%= t('.password') %><span class="text-red-500">*</span>
            </label>
            <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: t('.password') %>
          </div>
          <!-- パスワード確認 -->
          <div class="mb-6">
            <label class="form-label">
              <%= t('.password_confirmation') %><span class="text-red-500">*</span>
            </label>
            <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: t('.password_confirmation') %>
          </div>
          <!-- 新規登録ボタン -->
          <%= f.submit t('.sign_up'), class: "w-full bg-emerald-500 text-white font-bold py-2 px-4 rounded-md shadow hover:bg-emerald-700 transition-colors duration-200" %>
        <% end %>
        <div class="mt-4 text-center">
          <%= render "salons/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

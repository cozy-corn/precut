<div class="my-container">
  <div class="mt-10 p-6 bg-white shadow-md rounded">
    <h2 class="text-2xl font-semibold mb-6 text-center">プロフィール編集</h2>
    <%= form_with model: @salon, url: salons_profile_path, method: :patch, local: true do |f| %>
      <div class="mb-4">
        <%= f.label :salon_name, "サロン名", class: "block font-medium mb-1" %>
        <%= f.text_field :salon_name, class: "w-full border rounded p-2" %>
      </div>
      <div class="text-center">
        <%= f.submit "更新する", class: "bg-blue-500 text-white px-4 py-2 mt-6 rounded hover:bg-blue-600" %>
      </div>
    <% end %>
    <div class="text-center mt-4">
      <%= link_to "戻る", salons_profile_path, class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>

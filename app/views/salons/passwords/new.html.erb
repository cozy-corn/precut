<!-- salon側パスワードリセット画面 -->
<div class="my-container">
  <!-- 全体を中央寄せにするためのコンテナ -->
  <div class="flex flex-col items-center">
    <!-- ログインフォームのカードの様なフレームコンテナ -->
    <div class="bg-white p-8 rounded-lg shadow-lg w-96 max-w-sm">
      <h1 class="text-2xl font-bold mb-6 text-center text-gray-800"><%= t('.forgot_your_password') %></h1>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "salons/shared/error_messages", resource: resource %>
        <!-- メールアドレス入力 -->
        <div class="field">
          <%= f.label :email, class: "inline-block mb-1" %><br />
          <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <!-- パスワードリセット送信ボタン -->
        <div class="actions">
          <%= f.submit t('.send_me_reset_password_instructions'), class: "w-full bg-green-500 text-white font-bold py-2 px-4 mt-6 rounded-md shadow hover:bg-green-600 transition-colors duration-200" %>
        </div>
      <% end %>
      <div class="text-center mt-4">
        <%= render "salons/shared/links" %>
      </div>
    </div>
  </div>
</div>

<!-- サロン側のパスワード変更する際のview -->
<div class="my-container">
  <!-- 全体を中央寄せにするためのコンテナ -->
  <div class="flex flex-col items-center">
    <!-- ログインフォームのカードの様なフレームコンテナ -->
    <div class="modal-card">
      <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">パスワードを変更</h1>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "salons/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <!-- パスワード -->
        <div class="mb-4">
          <label class="form-label">
            <%= f.label :新しいパスワード, class: "translatable-text" %>
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上)
            <% end %>
          </label>
          <%= f.password_field :password, autofocus: true, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <!-- パスワード確認 -->
        <div class="mb-4">
          <label class="form-label">
            <%= f.label :新しいパスワード（確認用）, class: "translatable-text" %>
          </label>
          <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <div class="actions mt-3">
          <%= button_tag(type: 'submit', class: "w-full bg-green-500 text-white font-bold py-2 px-4 rounded-md shadow hover:bg-green-600 transition-colors duration-200") do %>
            パスワードを変更
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

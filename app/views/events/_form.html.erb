<%= form_with(model: event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
      <ul class="list-disc ml-5 mt-2">
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%# --- フォーム --- %>
  <div class="mb-2">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "mt-1 block w-full border rounded-md" %>
  </div>
  <div class="mb-2">
    <%= f.label :start_time, "開始日時" %>
    <%= f.datetime_field :start_time, class: "mt-1 block w-full border rounded-md" %>
  </div>
  <div class="mb-2">
    <%= f.label :end_time, "終了日時" %>
    <%= f.datetime_field :end_time, class: "mt-1 block w-full border rounded-md" %>
  </div>
  <%= f.submit "登録", class: "w-full bg-blue-500 hover:bg-blue-600 text-white py-2 rounded" %>
<% end %>

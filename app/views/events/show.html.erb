<div class="max-w-xl mx-auto p-6 bg-white shadow-lg rounded-lg text-center">
  <h1 class="text-3xl font-bold mb-4 text-gray-800">
    <%= @event.title %>
  </h1>
  <p class="text-gray-600 mb-2">
    開始日時: <%= @event.start_time.strftime("%Y年%m月%d日 %H:%M") %>
  </p>
  <p class="text-gray-600 mb-6">
    終了日時: <%= @event.end_time.strftime("%Y年%m月%d日 %H:%M") %>
  </p>
  <div class="flex space-x-4 justify-center">
    <%= link_to "編集する", edit_event_path(@event), 
        class: "bg-blue-500 text-white font-semibold py-2 px-4 rounded hover:bg-blue-600 transition duration-150" %>
    <%= link_to "削除する", @event, 
        data: { 
          turbo_method: :delete,           
          turbo_confirm: "本当にこの予定を削除しますか？" 
        },
        class: "bg-red-500 text-white font-semibold py-2 px-4 rounded hover:bg-red-600 transition duration-150" 
    %>
    <%= link_to "マイページへ戻る", user_path, 
        class: "bg-gray-200 text-gray-700 font-semibold py-2 px-4 rounded hover:bg-gray-300 transition duration-150" %>
  </div>
</div>
